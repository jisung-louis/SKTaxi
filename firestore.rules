rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // qr_logs: 익명 쓰기만 허용
    match /qr_logs/{docId} {
      allow create: if true;
      allow read: if false;
      allow update, delete: if false;
    }

    // 앱 버전체크
    match /appVersion/{platform} {
      allow read: if true;
      allow write: if false;
    }

    // 기본 규칙
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}